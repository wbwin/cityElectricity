/* pages/shop/commodityClassification/commodityClassification.wxss */
page{
  background-color: #fff
}
.page_hd {
  border-bottom: 16rpx solid #f7f7f7;
}

.classifly_list {
  position: relative;
  overflow: auto;
  white-space: nowrap;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.classifly_item {
  padding: 10rpx 30rpx;
  display: inline-block;
}

.weui-navbar__slider {
  bottom: 40rpx;
}

.sort_classify_item {
  width: 25%;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f7f7f7;
}

.sort_classify {
}

.screen_icon {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
}

.sort_item_active {
  color: #f18133;
}

.goods_list {
  padding: 32rpx;
}

.goods_item {
  height: 236rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.goods_item_tip {
  position: absolute;
  top: 16rpx;
  left: 124rpx;
  width: 96rpx;
  height: 46rpx;
  background: rgba(255, 132, 27, 1);
  border-radius: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 46rpx;
}

.goods_content {
  height: 100%;
  margin-left: 24rpx;
}

.goods_image {
  width: 236rpx;
  height: 236rpx;
}

.goods_name {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.goods_money {
  font-size: 28r px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 132, 27, 1);
}

.goods_msg {
  margin-top: 22rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.goods_browse {
  margin-left: 32rpx;
}

.goods_buy {
  width: 156rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  background: rgba(255, 132, 27, 1);
  border-radius: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

/*搜索框*/

.weui-search-bar {
  margin: 16rpx 32rpx;
  padding: 18rpx 32rpx;
  background-color: #f7f7f7;
  border-radius: 38rpx;
  border: 0;
}

.search_icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 16rpx;
}

.search_input {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #666;
}
