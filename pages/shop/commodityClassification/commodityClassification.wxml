<import src="../../template/noDatas/noDatas.wxml"/>
<!--pages/shop/commodityClassification/commodityClassification.wxml-->
<view class='page'>
  <view class='page_hd'>
    <view class="flex_row weui-search-bar">
      <image src='../../../images/search_icon.png' class='search_icon'></image>
      <input type="text" class="search_input weui-flex__item" placeholder="搜索" value="{{inputVal}}" />

    </view>
    <scroll-view scroll-x="true" class="classifly_list" scroll-into-view="{{toView}}">
      <block wx:for='{{classifly_list}}' wx:key='*this'>
        <view class='classifly_item {{activeIndex==index?"mainColor":""}}' id="{{'index'+index}}" data-index="{{index}}" bindtap='classiflyChoose'>{{item}}</view>
      </block>
      <!-- <view class="weui-navbar__slider" style="width:{{linewidth}};left:0%!important; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view> -->
    </scroll-view>

  </view>
  <view class='page_bd'>
    <view class='flex_row sort_classify'>
      <view class='flex_row jc_flex_center sort_classify_item {{sortIndex==0?"sort_item_active":""}}' bindtap='sortChoose' data-index='0'>综合</view>
      <view class='flex_row jc_flex_center sort_classify_item {{sortIndex==1?"sort_item_active":""}}' bindtap='sortChoose' data-index='1'>最热</view>
      <view class='flex_row jc_flex_center sort_classify_item {{sortIndex==2?"sort_item_active":""}}' bindtap='sortChoose' data-index='2'>新品</view>
      <view class='flex_row jc_flex_center sort_classify_item {{sortIndex==3?"sort_item_active":""}}' bindtap='sortChoose' data-index='3'>价格
        <image class='screen_icon' src='../../../images/screen_icon.png'></image>
      </view>
    </view>
    <view class='goods_list' wx:if="{{true}}">
      <block wx:for='{{8}}' wx:key='*this'>
        <view class='flex_row goods_item'>
          <image class='goods_image' src='../../../images/25a771df8db1cb1347a6428fda54564e93584b69.jpg'></image>
          <view class='goods_item_tip'>拼团</view>
          <view class='flex_column weui-flex__item jc_flex_sb goods_content'>
            <view class='goods_name textEllipsisTwo'>卫衣女卫衣女卫衣女卫衣女卫衣女卫衣女卫衣女卫</view>
            <view class='flex_column'>
              <view class='goods_money'>￥159</view>
              <view class='flex_row goods_msg'>
                <view>105购买</view>
                <view class='weui-flex__item goods_browse'>1098围观</view>
                <view class='goods_buy'>立即购买</view>
              </view>
            </view>
          </view>
        </view>
      </block>
    </view>
    <template is="noDatas" data="{{paddingTop:'250rpx',text1:'暂无商品'}}" wx:else/>
  </view>
</view>