/* pages/my/orderManagement/orderManagement.wxss */
.order_msg{
  padding: 24rpx 0;
  margin: 0 32rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.goods_img{
  width: 80rpx;
  height: 80rpx;
}
.goods_name{
  font-size:26rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:36rpx;
  margin-left: 24rpx;
  flex:1;
}
.textarea_box{
  position: relative;
}
.evaluate_textarea{
  padding: 32rpx;
  width: auto;
  height: 200rpx;
}
.textarea_text{
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  font-size:26rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.submit{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width:100%;
  height:98rpx;
  background:rgba(255,132,27,1);
  text-align: center;
  line-height: 98rpx;
  font-size:36rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,255,255,1);
}