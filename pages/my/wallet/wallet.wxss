/* pages/my/wallet/wallet.wxss */
.page{
  background: #f7f7f7
}
.page_bd{
  background: #f7f7f7
}
.settled_price{
  margin: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  position: relative;
  padding: 32rpx;
  box-shadow:0px 2rpx 16rpx 0px rgba(0,0,0,0.1);
}
.price_title{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(102,102,102,1);
margin-top: 6rpx;
}
.price_content{
  text-align: center;
  margin-top: 24rpx;
}
.settled_color{
  color:rgba(255,132,27,1);
}
.unsettled_color{
  color:#E34747
}
.price_symbol{
  font-size:36rpx;
font-family:PingFangSC-Regular;
font-weight:400;

}
.price_numb{
font-size:60rpx;
font-family:PingFangSC-Medium;
font-weight:500;
margin-left: 14rpx;
}
.withdrawal{
  padding: 12rpx 48rpx;
  background:rgba(255,132,27,1);
border-radius:34rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
line-height: normal;
margin-top: 48rpx;
margin-bottom:8rpx;

}
.detail_image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.price_detailed{
  font-size:26rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(153,153,153,1);
}
.pd40{
  padding-bottom: 80rpx;
}